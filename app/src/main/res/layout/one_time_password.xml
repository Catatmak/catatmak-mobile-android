<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="fill_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05">

        <Button
            android:id="@+id/buttonKembali"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Kembali"
            android:backgroundTint="@color/red"
            app:layout_constraintVertical_bias="0.1">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdadasddasdasdasdasdaa"
            android:textColor="@color/white">
        </TextView>

        <ImageView
            android:id="@+id/logocm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/catetmak_logo_with_background">
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="masukkan kode otp"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/otpContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintVertical_bias="0.1">
    </TextView>

    <TextView
        android:id="@+id/textbiasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="masukkan kode otp yang sudah dikirimkan pada nomor whatsapp sebelumnya"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/otpContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintVertical_bias="0.1">
    </TextView>

    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/buttonResendOTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintVertical_bias="0">

        <EditText
            android:id="@+id/editTextOTP1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:layout_marginEnd="1dp">
        </EditText>

        <EditText
            android:id="@+id/editTextOTP2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:layout_marginEnd="1dp">
        </EditText>

        <EditText
            android:id="@+id/editTextOTP3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:layout_marginEnd="1dp">
        </EditText>

        <EditText
            android:id="@+id/editTextOTP4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:layout_marginEnd="1dp">
        </EditText>

        <EditText
            android:id="@+id/editTextOTP5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:layout_marginEnd="1dp">
        </EditText>

        <EditText
            android:id="@+id/editTextOTP6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:layout_marginEnd="1dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonResendOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/buttonSubmitOTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tidak menerima pesan?"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
        </TextView>

        <TextView
            android:id="@+id/ResendOTP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kirim Ulang OTP"
            android:textColor="@color/light_blue"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSubmitOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vertifikasi OTP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonResendOTP"
        app:layout_constraintVertical_bias="0.1">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>